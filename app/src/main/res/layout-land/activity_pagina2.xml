<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hellfish.udabol.pagina2"
    android:background="@drawable/inicio2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SELECCIONE BLOQUE"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_marginBottom="50dp" />

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/aquino"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:weightSum="1"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Bloque A"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:elegantTextHeight="false"
            android:contextClickable="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.04"
            android:textStyle="italic"
            android:onClick="irCroquis" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Bloque C"
            android:id="@+id/button8"
            android:background="@drawable/button"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.04"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:onClick="irCroquis" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Bloque D"
            android:id="@+id/button9"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.04"
            android:textStyle="italic"
            android:onClick="irCroquis" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Bloque G"
            android:id="@+id/button10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.05"
            android:textStyle="italic"
            android:onClick="irCroquis" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Laboratorios"
            android:id="@+id/button11"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.04"
            android:textStyle="italic"
            android:onClick="irCroquis" />
    </LinearLayout>

</RelativeLayout>
